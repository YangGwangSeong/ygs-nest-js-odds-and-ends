{
  "name": "prisma-typia",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "check": "ts-patch check",
    "prepare": "ts-patch install",
    "---------------------------------------------": "",
    "build": "rimraf build && tsc -p ./tsconfig.build.json",
    "build:api": "rimraf packages/api/lib && npm run nestia && tsc -p ./tsconfig.api.json",
    "eslint": "eslint src",
    "eslint:fix": "eslint src --fix",
    "prettier": "prettier . -c",
    "prettier:fix": "prettier . -w",
    "dev": "npm run build && NODE_ENV=development node build/main",
    "----------------------------------------------": "",
    "start": "NODE_ENV=production node build/main",
    "-----------------------------------------------": "",
    "test": "rimraf tbuild && tsc -p ./tsconfig.test.json && NODE_ENV=test node tbuild/test",
    "------------------------------------------------": "",
    "swagger": "NODE_ENV=development nestia swagger",
    "sdk": "rimraf ./src/api/functional && NODE_ENV=development nestia sdk && find ./src/api -type f -exec sed -i '' 's/\\r$//' {} \\;",
    "nestia": "npm run swagger ; npm run sdk",
    "package:publish": "npm run build:api && cd ./packages/api && npm publish",
    "-------------------------------------------------": "",
    "db:sch": "ts-node prisma",
    "db:update": "rimraf db && npm run db:sch && prisma generate && find ./db/runtime -type f -exec sed -i '' 's/\\r$//' {} \\;",
    "db:sync": "npm run db:update && prisma migrate dev",
    "db:init": "prisma migrate reset --force",
    "db:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@devts/authjs": "^0.0.2",
    "@fxts/core": "^0.15.1",
    "@nestia/core": "^2.4.7",
    "@nestia/e2e": "^0.4.1",
    "@nestia/fetcher": "^2.4.7",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "schemix": "^1.12.0",
    "typia": "^5.4.1"
  },
  "devDependencies": {
    "@nestia/sdk": "^2.4.7",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@prisma/client": "^5.12.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nestia": "^5.2.1",
    "prettier": "^3.0.0",
    "prisma": "^5.12.1",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "typescript-transform-paths": "^3.4.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
